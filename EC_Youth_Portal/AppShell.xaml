<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EC_Youth_Portal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EC_Youth_Portal.Views"
    Title="EC_Youth_Portal">

    <ShellContent
        Route="SplashPage"
        ContentTemplate="{DataTemplate views:SplashPage}"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />

    <!-- Main Tab Bar - Starts from MainPage -->
    <TabBar Route="MainTabs">

        <!-- Main Page Tab -->
        <ShellContent
        Title="Home"
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}">
            <ShellContent.Icon>
                <FontImageSource 
                Glyph="ðŸ " 
                FontFamily="Segoe UI Emoji"
                Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>

        <!-- Login Page Tab -->
        <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}">
            <ShellContent.Icon>
                <FontImageSource 
                Glyph="ðŸ”‘" 
                FontFamily="Segoe UI Emoji"
                Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>

        <!-- Register Page Tab -->
        <ShellContent
        Title="Register"
        Route="RegisterPage"
        ContentTemplate="{DataTemplate views:RegisterPage}">
            <ShellContent.Icon>
                <FontImageSource 
                Glyph="âœ¨" 
                FontFamily="Segoe UI Emoji"
                Color="{StaticResource PrimaryOrange}"/>
            </ShellContent.Icon>
        </ShellContent>

    </TabBar>

    <!-- Shell Styling -->
    <Shell.Resources>
        <!-- Tab Bar Style -->
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White"/>
            <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource PrimaryNavy}"/>
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource PrimaryNavy}"/>
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextSecondary}"/>
        </Style>

        <!-- Selected Tab Style -->
        <Style TargetType="ShellContent" ApplyToDerivedTypes="True">
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource PrimaryOrange}"/>
            <Setter Property="Shell.TitleColor" Value="{StaticResource PrimaryOrange}"/>
        </Style>
    </Shell.Resources>

</Shell>
