<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EC_Youth_Portal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EC_Youth_Portal.Views"
    xmlns:dashboard="clr-namespace:EC_Youth_Portal.Views.DashBoard"
    Title="EC_Youth_Portal">

    <ShellContent
        Route="SplashPage"
        ContentTemplate="{DataTemplate views:SplashPage}"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />


    <!-- Main Page - No Tabs, just single page -->
    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />

    <!-- Dashboard Tab Bar (After Login) -->
    <TabBar Route="DashboardTabs">

        <!-- Home/Dashboard -->
        <ShellContent
            Title="Home"
            Route="DashboardHome"
            ContentTemplate="{DataTemplate dashboard:DashboardLandingPage}">
            <ShellContent.Icon>
                <FontImageSource 
                    Glyph="ðŸ " 
                    FontFamily="Segoe UI Emoji"
                    Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>

        <!-- Y2R Connect --><!--
        <ShellContent
            Title="Y2R"
            Route="Y2RPage"
            ContentTemplate="{DataTemplate dashboard:Y2RPage}">
            <ShellContent.Icon>
                <FontImageSource 
                    Glyph="ðŸ¤" 
                    FontFamily="Segoe UI Emoji"
                    Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>-->

        <!-- My Applications -->
        <ShellContent
            Title="Applications"
            Route="ApplicationsPage"
            ContentTemplate="{DataTemplate dashboard:MyApplicationsPage}">
            <ShellContent.Icon>
                <FontImageSource 
                    Glyph="ðŸ“‹" 
                    FontFamily="Segoe UI Emoji"
                    Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>

        <!-- Pathway Builder --><!--
        <ShellContent
            Title="Pathway"
            Route="PathwayPage"
            ContentTemplate="{DataTemplate dashboard:PathwayBuilderPage}">
            <ShellContent.Icon>
                <FontImageSource 
                    Glyph="ðŸŽ¯" 
                    FontFamily="Segoe UI Emoji"
                    Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>-->

        <ShellContent
            Title="Me"
            Route="MyProfilePage"
            ContentTemplate="{DataTemplate dashboard:MyProfilePage}">
            <ShellContent.Icon>
                <FontImageSource 
            Glyph="ðŸ‘¤" 
            FontFamily="Segoe UI Emoji"
            Color="{StaticResource PrimaryNavy}"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>


    <!-- Shell Styling -->
    <Shell.Resources>
        <!-- Tab Bar Style -->
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White"/>
            <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource PrimaryNavy}"/>
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource PrimaryNavy}"/>
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextSecondary}"/>
        </Style>

        <!-- Selected Tab Style -->
        <Style TargetType="ShellContent" ApplyToDerivedTypes="True">
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource PrimaryOrange}"/>
            <Setter Property="Shell.TitleColor" Value="{StaticResource PrimaryOrange}"/>
        </Style>
    </Shell.Resources>

</Shell>
