<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewmodels="clr-namespace:EC_Youth_Portal.ViewModel"
             xmlns:converters="clr-namespace:EC_Youth_Portal.Converters"
             x:Class="EC_Youth_Portal.Views.CreateProfilePage"
             x:DataType="viewmodels:CreateProfilePageViewModel"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:BoolToColumnConverter x:Key="BoolToColumnConverter"/>
            <converters:BoolToColumnSpanConverter x:Key="BoolToColumnSpanConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- MODERN CURVED HEADER WITH GRADIENT -->
        <Grid Grid.Row="0" RowDefinitions="*,30">

            <!-- Main Header Content -->
            <Border Grid.Row="0"
                    Grid.RowSpan="2"
                    BackgroundColor="#1E3A5F">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,32,32"/>
                </Border.StrokeShape>

                <Grid Padding="24,20,24,35" RowDefinitions="Auto,Auto,Auto" RowSpacing="15">

                    <!-- Top Row: Back Button + Avatar/Step Counter -->
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">

                        <!-- Back Button --><!--
                        <Border WidthRequest="42"
                                HeightRequest="42"
                                BackgroundColor="#2C5282"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BackCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="â†"
                                   FontSize="22"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>-->

                        <!-- Center Spacer -->
                        <BoxView Grid.Column="1" IsVisible="False"/>

                        <!-- Step Counter Badge -->
                        <Border Grid.Column="2"
                                BackgroundColor="#FFA500"
                                Padding="14,8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="âœ“"
                                       FontSize="14"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding CurrentStep, StringFormat='Step {0}/5'}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Title Section with Icon -->
                    <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="12">

                        <!-- Icon Container -->
                        <Border WidthRequest="52"
                                HeightRequest="52"
                                BackgroundColor="#2C5282"
                                StrokeThickness="2"
                                Stroke="#FFA500">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Label Text="ðŸ‘¤"
                                   FontSize="26"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Title and Subtitle -->
                        <VerticalStackLayout Grid.Column="1" 
                                            Spacing="4"
                                            VerticalOptions="Center">
                            <Label Text="Complete Your Profile"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding CurrentStepText}"
                                   FontSize="13"
                                   TextColor="#94A3B8"
                                   LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Progress Indicators -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*,*" ColumnSpacing="6">

                        <!-- Step 1 -->
                        <Border Grid.Column="0"
                                BackgroundColor="{Binding Step1Color}"
                                HeightRequest="8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{Binding Step1Color}"
                                        Opacity="0.4"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Border.Shadow>
                        </Border>

                        <!-- Step 2 -->
                        <Border Grid.Column="1"
                                BackgroundColor="{Binding Step2Color}"
                                HeightRequest="8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{Binding Step2Color}"
                                        Opacity="0.4"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Border.Shadow>
                        </Border>

                        <!-- Step 3 -->
                        <Border Grid.Column="2"
                                BackgroundColor="{Binding Step3Color}"
                                HeightRequest="8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{Binding Step3Color}"
                                        Opacity="0.4"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Border.Shadow>
                        </Border>

                        <!-- Step 4 -->
                        <Border Grid.Column="3"
                                BackgroundColor="{Binding Step4Color}"
                                HeightRequest="8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{Binding Step4Color}"
                                        Opacity="0.4"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Border.Shadow>
                        </Border>

                        <!-- Step 5 -->
                        <Border Grid.Column="4"
                                BackgroundColor="{Binding Step5Color}"
                                HeightRequest="8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="4"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{Binding Step5Color}"
                                        Opacity="0.4"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Border.Shadow>
                        </Border>
                    </Grid>

                </Grid>
            </Border>

            <!-- Decorative Accent Dots (bottom right) -->
            <Grid Grid.Row="1"
                  HorizontalOptions="End"
                  Margin="0,0,30,0"
                  ColumnDefinitions="Auto,Auto,Auto"
                  ColumnSpacing="4"
                  VerticalOptions="Start">
                <Ellipse Grid.Column="0"
                         Fill="#FFA500"
                         WidthRequest="6"
                         HeightRequest="6"
                         Opacity="0.6"/>
                <Ellipse Grid.Column="1"
                         Fill="#FFA500"
                         WidthRequest="6"
                         HeightRequest="6"
                         Opacity="0.4"/>
                <Ellipse Grid.Column="2"
                         Fill="#FFA500"
                         WidthRequest="6"
                         HeightRequest="6"
                         Opacity="0.2"/>
            </Grid>
        </Grid>

        <!-- DYNAMIC CONTENT - Only loads current section -->
        <ScrollView Grid.Row="1" Margin="0,10,0,0">
            <ContentView x:Name="SectionContainer" 
                         Padding="20"/>
        </ScrollView>

        <!-- BOTTOM ACTION BUTTONS -->
        <Border Grid.Row="2"
                BackgroundColor="White"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24,24,0,0"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.1"
                        Radius="20"
                        Offset="0,-4"/>
            </Border.Shadow>

            <Grid Padding="20,18"
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="12"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="10">

                <!-- Previous Button -->
                <Border Grid.Column="0"
                        BackgroundColor="Transparent"
                        Stroke="#1E3A5F"
                        StrokeThickness="2"
                        IsVisible="{Binding ShowPreviousButton}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PreviousCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="â† Previous"
                           TextColor="#1E3A5F"
                           FontAttributes="Bold"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Padding="0,14"/>
                </Border>

                <!-- Next/Complete Button (When Previous is visible) -->
                <Border Grid.Column="1"
                        BackgroundColor="#FFA500"
                        StrokeThickness="0"
                        IsVisible="{Binding ShowPreviousButton}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#FFA500"
                                Opacity="0.4"
                                Radius="12"
                                Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NextCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="{Binding NextButtonText}"
                           TextColor="White"
                           FontAttributes="Bold"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Padding="0,14"/>
                </Border>

                <!-- Next/Complete Button (When Previous is NOT visible - full width) -->
                <Border Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#FFA500"
                        StrokeThickness="0"
                        IsVisible="{Binding ShowPreviousButton, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#FFA500"
                                Opacity="0.4"
                                Radius="12"
                                Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NextCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="{Binding NextButtonText}"
                           TextColor="White"
                           FontAttributes="Bold"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Padding="0,14"/>
                </Border>

                <!-- Save Draft Button -->
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        BackgroundColor="Transparent"
                        Stroke="#E0E0E0"
                        StrokeThickness="1.5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SaveDraftCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                          Spacing="6"
                                          Padding="0,12">
                        <Label Text="ðŸ’¾"
                               FontSize="14"
                               VerticalOptions="Center"/>
                        <Label Text="Save as Draft"
                               TextColor="#64748B"
                               FontSize="13"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
        </Border>
    </Grid>
    
</ContentPage>
