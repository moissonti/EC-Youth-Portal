<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewmodels="clr-namespace:EC_Youth_Portal.ViewModel"
             xmlns:converters="clr-namespace:EC_Youth_Portal.Converters"
             x:Class="EC_Youth_Portal.Views.CreateProfilePage"
             x:DataType="viewmodels:CreateProfilePageViewModel"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:BoolToColumnConverter x:Key="BoolToColumnConverter"/>
            <converters:BoolToColumnSpanConverter x:Key="BoolToColumnSpanConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- REDESIGNED COMPACT HEADER -->
        <Border Grid.Row="0"
                BackgroundColor="#1E3A5F"
                StrokeThickness="0"
                Margin="0,0,0,15">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,24,24"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.12"
                        Radius="15"
                        Offset="0,3"/>
            </Border.Shadow>

            <Grid Padding="20,15,20,20" 
                  RowDefinitions="Auto,Auto,Auto" 
                  RowSpacing="12">

                <!-- Row 1: Title and Step Badge -->
                <Grid Grid.Row="0" 
                      ColumnDefinitions="*,Auto" 
                      ColumnSpacing="12">

                    <!-- Title Section -->
                    <VerticalStackLayout Grid.Column="0" 
                                        Spacing="3"
                                        VerticalOptions="Center">
                        <Label Text="Complete Your Profile"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               LineBreakMode="TailTruncation"/>
                        <Label Text="{Binding CurrentStepText}"
                               FontSize="12"
                               TextColor="#94A3B8"
                               LineBreakMode="TailTruncation"/>
                    </VerticalStackLayout>

                    <!-- Step Counter Badge -->
                    <Border Grid.Column="1"
                            BackgroundColor="#FFA500"
                            Padding="12,6"
                            StrokeThickness="0"
                            VerticalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#FFA500"
                                    Opacity="0.3"
                                    Radius="8"
                                    Offset="0,2"/>
                        </Border.Shadow>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="{Binding CurrentStep}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                            <Label Text="/"
                                   FontSize="12"
                                   TextColor="White"
                                   Opacity="0.7"
                                   VerticalOptions="Center"/>
                            <Label Text="5"
                                   FontSize="12"
                                   TextColor="White"
                                   Opacity="0.7"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>

                <!-- Row 2: Progress Bar -->
                <Grid Grid.Row="1" 
                      ColumnDefinitions="*,*,*,*,*" 
                      ColumnSpacing="6"
                      Margin="0,0,0,0">

                    <!-- Step 1 -->
                    <Border Grid.Column="0"
                            BackgroundColor="{Binding Step1Color}"
                            HeightRequest="6"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>
                    </Border>

                    <!-- Step 2 -->
                    <Border Grid.Column="1"
                            BackgroundColor="{Binding Step2Color}"
                            HeightRequest="6"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>
                    </Border>

                    <!-- Step 3 -->
                    <Border Grid.Column="2"
                            BackgroundColor="{Binding Step3Color}"
                            HeightRequest="6"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>
                    </Border>

                    <!-- Step 4 -->
                    <Border Grid.Column="3"
                            BackgroundColor="{Binding Step4Color}"
                            HeightRequest="6"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>
                    </Border>

                    <!-- Step 5 -->
                    <Border Grid.Column="4"
                            BackgroundColor="{Binding Step5Color}"
                            HeightRequest="6"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>
                    </Border>
                </Grid>

                <!-- Row 3: Step Labels (Optional - shows what each step is) -->
                <Grid Grid.Row="2" 
                      ColumnDefinitions="*,*,*,*,*" 
                      ColumnSpacing="6"
                      IsVisible="False">
                    <Label Grid.Column="0" 
                           Text="•" 
                           FontSize="8" 
                           TextColor="#94A3B8" 
                           HorizontalOptions="Center"/>
                    <Label Grid.Column="1" 
                           Text="•" 
                           FontSize="8" 
                           TextColor="#94A3B8" 
                           HorizontalOptions="Center"/>
                    <Label Grid.Column="2" 
                           Text="•" 
                           FontSize="8" 
                           TextColor="#94A3B8" 
                           HorizontalOptions="Center"/>
                    <Label Grid.Column="3" 
                           Text="•" 
                           FontSize="8" 
                           TextColor="#94A3B8" 
                           HorizontalOptions="Center"/>
                    <Label Grid.Column="4" 
                           Text="•" 
                           FontSize="8" 
                           TextColor="#94A3B8" 
                           HorizontalOptions="Center"/>
                </Grid>

            </Grid>
        </Border>

        <!-- DYNAMIC CONTENT - Only loads current section -->
        <ScrollView Grid.Row="1" Margin="0,0,0,0">
            <ContentView x:Name="SectionContainer" 
                         Padding="20,0,20,20"/>
        </ScrollView>

        <!-- BOTTOM ACTION BUTTONS  -->
        <Border Grid.Row="2"
                BackgroundColor="White"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.08"
                        Radius="16"
                        Offset="0,-3"/>
            </Border.Shadow>

            <Grid Padding="20,16,20,20"
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="12">

                <!-- Previous Button (Only visible when ShowPreviousButton is true) -->
                <Border Grid.Column="0"
                        BackgroundColor="Transparent"
                        Stroke="#E5E5E5"
                        StrokeThickness="2"
                        IsVisible="{Binding ShowPreviousButton}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PreviousCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                          Spacing="6"
                                          Padding="0,15">
                        <Label Text="←"
                               FontSize="16"
                               TextColor="#1E3A5F"
                               VerticalOptions="Center"/>
                        <Label Text="Previous"
                               TextColor="#1E3A5F"
                               FontAttributes="Bold"
                               FontSize="15"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Next/Complete Button (When Previous is visible) -->
                <Border Grid.Column="1"
                        BackgroundColor="#FFA500"
                        StrokeThickness="0"
                        IsVisible="{Binding ShowPreviousButton}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#FFA500"
                                Opacity="0.35"
                                Radius="12"
                                Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NextCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                          Spacing="6"
                                          Padding="0,15">
                        <Label Text="{Binding NextButtonText}"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontSize="15"
                               VerticalOptions="Center"/>
                        <Label Text="→"
                               FontSize="16"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Next/Complete Button (When Previous is NOT visible - full width) -->
                <Border Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#FFA500"
                        StrokeThickness="0"
                        IsVisible="{Binding ShowPreviousButton, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#FFA500"
                                Opacity="0.35"
                                Radius="12"
                                Offset="0,4"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NextCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                          Spacing="8"
                                          Padding="0,15">
                        <Label Text="{Binding NextButtonText}"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontSize="15"
                               VerticalOptions="Center"/>
                        <Label Text="→"
                               FontSize="16"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

            </Grid>
        </Border>
    </Grid>

</ContentPage>