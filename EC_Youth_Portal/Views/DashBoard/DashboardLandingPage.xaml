                                           Spacing="2"
                                           VerticalOptions="Center">
                            <Label Text="Your Location"
                                   FontSize="11"
                                   TextColor="#94A3B8"/>
                            <Label Text="{Binding UserLocation}"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="#1E3A5F"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="2"
                               Text="â€º"
                               FontSize="20"
                               TextColor="#FFA500"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Search Bar -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       Padding="15,12"
                       HasShadow="False"
                       BorderColor="#E0E0E0">
                    <Frame.GestureRecognizers>
