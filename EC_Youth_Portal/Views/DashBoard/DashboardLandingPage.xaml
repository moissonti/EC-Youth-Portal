                               Text="Search for jobs, internships, events..."
                               FontSize="14"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>
                        <Frame Grid.Column="2"
                               BackgroundColor="#FFA500"
                               CornerRadius="8"
                               Padding="8,6"
                               HasShadow="False">
                            <Label Text="GO"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>

                <!-- Quick Stats Grid -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="15"
                      RowDefinitions="Auto,Auto"
                      RowSpacing="15">

                    <!-- Applications Stat -->
                    <Frame Grid.Column="0" Grid.Row="0"
                           BackgroundColor="White"
                           CornerRadius="16"
                           Padding="20"
                           HasShadow="False"
                           BorderColor="#E0E0E0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewApplicationsCommand}"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="ðŸ“‹"
