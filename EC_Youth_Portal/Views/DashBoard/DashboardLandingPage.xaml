                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#1E3A5F"/>
                            <Label Text="Opportunities"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Profile Completion -->
                    <Frame Grid.Column="0" Grid.Row="1"
                           BackgroundColor="White"
                           CornerRadius="16"
                           Padding="20"
                           HasShadow="False"
                           BorderColor="#E0E0E0">
                        <VerticalStackLayout Spacing="8">
