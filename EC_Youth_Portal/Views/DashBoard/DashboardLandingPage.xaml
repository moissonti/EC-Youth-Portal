                            <Label Text="{Binding ApplicationCount}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#1E3A5F"/>
                            <Label Text="Applications"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Opportunities Stat -->
                    <Frame Grid.Column="1" Grid.Row="0"
                           BackgroundColor="White"
                           CornerRadius="16"
                           Padding="20"
                           HasShadow="False"
                           BorderColor="#E0E0E0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewOpportunitiesCommand}"/>
                        </Frame.GestureRecognizers>
