                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               Text="ðŸ”"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"/>
